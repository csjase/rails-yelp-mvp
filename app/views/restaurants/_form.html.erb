<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-6'>
      <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: %w[chinese italian japanese french belgian] %>
      <%# <%= f.input :rating %>
      <%= f.submit class: 'btn btn-primary'%>
      <% end %>
    </div>
  </div>
</div>
